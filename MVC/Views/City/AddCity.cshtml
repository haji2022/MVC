@model City

@{
    ViewData["Title"] = "Create";
}

<h1>Add New City</h1>

  @if (User.IsInRole("Admin"))
{
    <form asp-action="AddCity" method="post">

   <div class="form-group">
        <label>Insert City</label>
        <div class="col-sm-3">
            <input asp-for="Name" type="text" class="form-control" placeholder="Type in city name..." />
        </div>
    </div>

   <div class="form-group col-sm-3">
        <label>Choose Country</label>
        <select name="countryId" class="form-control" asp-items="ViewBag.Countries"></select>
    </div>

   <input type="submit" value="Create City" class="btn btn-secondary btn-sm" />


</form> }
