@model IEnumerable<Country>
<a asp-controller="Country" asp-action="AddCountry">Add Country</a>

<div class="row align-items-end" style="margin-left:1px">
    <table class="table table-condensed">
        <thead>
            <tr>
                <th>Id</th>
                <th>Country</th>
                <th>Edit</th>
                <th>Delete</th>
            </tr>
        </thead>
        <tbody>


            @foreach (var country in Model)
            {

                <tr>
                    <td> @country.Id</td>
                    <td> @country.Name</td>
                    <td>
                        <a asp-action="Edit" asp-route-id="@country.Id">Edit</a>
                    </td>
                    @if (User.IsInRole("Admin"))
                    {
                        <td><a asp-action="Delete" asp-route-id="@country.Id" class="bi bi-trash"></a></td>
                    }
                    else
                    {
                        <td>&nbsp;</td>
                    }


                </tr>


            }
        </tbody>
    </table>
</div>