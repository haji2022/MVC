@model IEnumerable<ApplicationUser>
@{
    ViewData["Title"] = "ShowAllUsers";
}

<h1>Show all users</h1>

<table class="table">
    <thead>
        <tr>
            <th>
                Id
            </th>
            <th>
                Username
            </th>
            <th>
                First name
            </th>
            <th>
                Last name
            </th>
            <th></th>
        </tr>
    </thead>
    @foreach(var user in Model)
    {
        <tr>
            <td>@user.Id</td>
            <td>@user.UserName</td>
            <td>@user.FirstName</td>
            <td>@user.LastName</td>
            <td>
                <a asp-action="ShowUserRoles" asp-route-id="@user.Id" class="btn-primary">Check roles</a>
            </td>
        </tr>
    }
</table>